<!DOCTYPE html>
<html>
<head>
  <title>Votes</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="container">
      <nav class="navbar navbar-default">
        <div class="container-fluid">
          <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="bs-example-navbar-collapse-3">
              <span class="sr-only"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="#">Home</a>
          </div>
          <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-3">
            <% if user_signed_in? %>
            <%= link_to edit_user_registration_path do %>
            <button type="button" class="btn btn-default navbar-btn">Edit Profile</button>
            <% end %>
            <%= link_to destroy_user_session_path, method: :delete do %>
            <button type="button" class="btn-default navbar-btn">Log Out</button>
            <% end %>
            <div class="navbar-right navbar-brand">Welcome, <%= current_user.email %></div>
            <% else %>
            <%= link_to new_user_session_path do %>
            <button type="button" class="btn btn-default navbar-btn">Log In</button>
            <% end %>
            <% end %>
          </div>
        </div>
      </nav>
            <%= yield %>
          </div>
          </body>
          </html>
